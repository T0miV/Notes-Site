{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",  // Tämä voi olla tyhjä, koska käytämme suoraan ts-nodea
    "rootDir": "./src"   // Tämä määrittää, mistä TypeScript-tiedostot löytyvät
  },
  "include": [
    "src/**/*.ts"  // Lisää kaikki TypeScript-tiedostot, jotka haluat kääntää
, "src/app.ts", "api/vercel.ts"  ],
  "exclude": [
    "node_modules"
  ]
}
